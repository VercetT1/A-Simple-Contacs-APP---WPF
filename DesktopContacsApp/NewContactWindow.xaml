<Window
    x:Class="DesktopContactsApp.NewContactWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DesktopContactsApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="NewContactWindow"
    Width="400"
    Height="200"
    ResizeMode="NoResize"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Name:" />
            <TextBox x:Name="nameTextBox" Margin="0,0,0,5" />
            <TextBlock Text="Email:" />
            <TextBox x:Name="emailTextBox" Margin="0,0,0,5" />
            <TextBlock Text="Phone:" />
            <TextBox x:Name="phoneNumberTextBox" Margin="0,0,0,5" />
            <Button Click="Button_Click" Content="Save" />
            <Button
                x:Name="closingButton"
                Click="closingButton_Click"
                Content="Return" />
        </StackPanel>
    </Grid>
</Window>
